{
  "name": "wdio-appium-cucumber-project",
  "version": "1.0.0",
  "description": "WebdriverIO project with Cucumber BDD for mobile app testing using Appium",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--loader=ts-node/esm/transpile-only --no-warnings' npx wdio run wdio.conf.js",
    "test:simple": "npx wdio run wdio.simple.conf.js",
    "test:android": "npx wdio run wdio.conf.js --suite android",
    "install:deps": "npm install"
  },
  "keywords": [
    "webdriverio",
    "appium",
    "cucumber",
    "mobile",
    "testing",
    "automation",
    "android"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@wdio/allure-reporter": "^8.24.0",
    "@wdio/appium-service": "^8.24.0",
    "@wdio/cli": "^8.24.0",
    "@wdio/cucumber-framework": "^8.24.0",
    "@wdio/local-runner": "^8.24.0",
    "@wdio/spec-reporter": "^8.24.0",
    "appium": "^2.0.0",
    "appium-uiautomator2-driver": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chai": "^4.3.7"
  }
}
